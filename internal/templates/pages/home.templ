					}
					<p>Anti Aging</p>
				</icon-group>
				<icon-group class="flex flex-col gap-2 justify-center items-center">
					@datadisplay.CircleOutline(datadisplay.SecondaryLo, datadisplay.XL11, nil) {
						@datadisplay.Icon(datadisplay.FlexIcon, datadisplay.XL4, datadisplay.SecondaryLo)
					}
					<p>Vitality</p>
				</icon-group>
			</div>
		</section>


		<section id="products" class="flex flex-col gap-4 w-full py-8 px-4 text-secondary">
			<section-header class="text-xl text-center">Featured Products</section-header>
			<div class="flex items-center justify-center flex-wrap lg:gap-10 gap-4">
			@productcard.ProductCard(productcard.Props{
				Title: "Vitality Boost",
				Desc: "Supports Energy & Focus",
				Img: productcard.ImgProps {
					Src: "/public/peptide.webp",
					Alt: "Peptide",
				},
				BtnText: "Add to Cart",
			})
			@productcard.ProductCard(productcard.Props{
				Title: "Vitality Boost",
				Desc: "Supports Energy & Focus",
				Img: productcard.ImgProps {
					Src: "/public/peptide.webp",
					Alt: "Peptide",
				},
				BtnText: "Add to Cart",
			})
			@productcard.ProductCard(productcard.Props{
				Title: "Vitality Boost",
				Desc: "Supports Energy & Focus",
				Img: productcard.ImgProps {
					Src: "/public/peptide.webp",
					Alt: "Peptide",
				},
				BtnText: "Add to Cart",
			})
			</div>
		</section>
